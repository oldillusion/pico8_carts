	d_player()
end
-->8
-- player
function i_player()
	player={
		x=20,
		y=20
	}
end

function u_player()
	if btn(⬆️) and player.y>10 then
		player.y-=1
	end
	if btn(➡️) and player.x<128 then
	 player.x+=1
	end
	if btn(⬇️) and player.y<108 then
	 player.y+=1
	end
	if btn(⬅️) and player.x>0 then
	 player.x-=1
	end
end

function d_player()
	spr(1,player.x,player.y)
	--print(player.x.." "..player.y)
end
