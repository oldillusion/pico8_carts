-- player
function i_player()
	
end

function u_player()
 if btn(⬆️) or btn(⬇️) or btn(⬅️) or btn(➡️) then
 	if player.ani_timer<player_ani_speed then
 		player.ani_timer+=1
 	else
 		if player.frame<player_lf then
 			player.frame+=1
 		else
 			player.frame=player_ff
 		end
 		player.ani_timer=0
 	end
 end
	if btn(⬆️) and player.y>11 then
		player.y-=1
	end
	if btn(➡️) and player.x<121 then
	 player.x+=1
	 player.left=false
	end
	if btn(⬇️) and player.y<110 then
	 player.y+=1
	end
	if btn(⬅️) and player.x>=0 then
	 player.x-=1
	 player.left=true
	end
end

function d_player()
	spr(player.frame,player.x,player.y,1,1,player.left)
end
