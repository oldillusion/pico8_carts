-- global

function _init()
	-- constants
	player_ff=1
	player_lf=2
	player_ani_speed=7

	-- data
	player={
		x=20,
		y=20,
		frame=1,
		left=false,
		ani_timer=0
	}
end

function _update()
	u_player()
end

function _draw()
	cls(13)
	map()
	d_ui()
	d_player()
end
